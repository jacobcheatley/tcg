{
    // Formatting
    "python.formatting.provider": "none",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "black-formatter.args": [
        "--line-length=120"
    ],
    // File associations
    "files.associations": {
        "*.html": "jinja-html"
    }
}